.swiper {
  font-size: 28rpx;
  height: 450rpx;
}

.swiper swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper swiper-item .title {
  display: block;
  width: 100%;
  height: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  padding-top: 28rpx;
  padding-left: 10rpx;
}

.news-item {
  margin: 20rpx 30rpx 10rpx;
  display: flex;
  flex-flow: row nowrap;
  font-size: 28rpx;
  height: 200rpx;
  background-color: #f6f6f6;
}

.news-item-left {
  width: 60%;
  padding: 40rpx 50rpx;
}

.news-item-right {
  width: 40%;
}

.news-item-right image {
  padding: 25rpx 30rpx;
  width: 150rpx;
  height: 150rpx;
}
